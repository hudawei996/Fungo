<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fungo.repertory">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".app.SampleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".widget.CustomViewActivity" />
        <activity android:name=".widget.falling.FallingViewActivity" />
        <activity android:name=".widget.banner.BannerViewActivity" />
        <activity android:name=".recycler.RecyclerViewActivity" />
        <activity android:name=".recycler.RecyclerPageActivity" />
        <activity
            android:name=".player.PlayerMainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity android:name=".image.ImageTestActivity" />
    </application>

</manifest>