<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--底图-->
    <ImageView
        android:id="@+id/ivPlaceImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <!--加载动画-->
    <LinearLayout
        android:id="@+id/layoutLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="27dp"
            android:layout_height="10dp"
            android:indeterminateDrawable="@drawable/player_loading" />

        <TextView
            android:id="@+id/tvLoadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="正在缓冲..."
            android:textColor="@android:color/white"
            android:textSize="13sp" />
    </LinearLayout>

    <!--横屏拖动位置视图-->
    <LinearLayout
        android:id="@+id/layoutChangePosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/player_bg_radius_4"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="12dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvChangeDTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="40sp"
                tools:text="-60" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="秒"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvChangeCurrentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="04:27"
                android:textColor="#FFC000"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="/"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvChangeTotalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06:02"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>

        <SeekBar
            android:id="@+id/pbChangePosition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:max="100"
            android:progressDrawable="@drawable/player_seek_progress"
            android:thumb="@null" />
    </LinearLayout>


    <!--横屏改变亮度视图-->
    <LinearLayout
        android:id="@+id/layoutChangeBrightness"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="@drawable/player_bg_radius_4"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="12dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_player_brightness" />

        <TextView
            android:id="@+id/tvChangeProgressBrightness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="89%" />

    </LinearLayout>

    <!--横屏改变声音视图-->
    <LinearLayout
        android:id="@+id/layoutChangeVolume"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="@drawable/player_bg_radius_4"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="12dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_player_volume" />

        <TextView
            android:id="@+id/tvChangeProgressVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="89%" />

    </LinearLayout>

    <!--播放错误视图-->
    <LinearLayout
        android:id="@+id/layoutError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_player_replay" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="加载失败"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <!--顶部控制区-->
    <LinearLayout
        android:id="@+id/layoutTopController"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@mipmap/ic_player_mask_top"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:scaleType="center"
            android:src="@mipmap/ic_back" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            tools:text="真实死亡游戏“蓝鲸”疑似进入国内，家长们要注意了" />

        <ImageView
            android:id="@+id/ivTopShare"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:scaleType="center"
            android:src="@mipmap/ic_player_share" />

        <LinearLayout
            android:id="@+id/layoutTopBatteryTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvTopTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:12"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/ivTopBattery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/ic_player_battery_100" />

        </LinearLayout>


    </LinearLayout>

    <!--底部控制区-->
    <LinearLayout
        android:id="@+id/layoutBottomController"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/ic_player_mask_bottom"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivBottomStartOrPause"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:scaleType="center"
            android:src="@mipmap/ic_player_bottom_start" />

        <TextView
            android:id="@+id/tvBottomPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@android:color/white"
            android:textSize="12sp" />


        <SeekBar
            android:id="@+id/skBottomSeek"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:max="100"
            android:maxHeight="10dp"
            android:minHeight="10dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:progressDrawable="@drawable/player_seek_progress"
            android:thumb="@drawable/player_seek_thumb"
            android:thumbOffset="0dp" />

        <TextView
            android:id="@+id/tvBottomDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/ivFullOrShrinkScreen"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:scaleType="center"
            android:src="@mipmap/ic_player_full" />
    </LinearLayout>

    <!--中间开始播放或者暂停按钮-->
    <ImageView
        android:id="@+id/ivCenterStartOrPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_player_center_start"
        android:visibility="gone" />

</RelativeLayout>