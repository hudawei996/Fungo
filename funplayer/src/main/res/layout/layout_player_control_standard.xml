<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!--背景图片-->
    <ImageView
        android:id="@+id/fpPlaceBgView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <!--顶部控制容器-->
    <LinearLayout
        android:id="@+id/fpTopContainer"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/player_shape_controller_top"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/fpTopBackView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:padding="12dp"
            android:src="@mipmap/ic_player_back" />

        <TextView
            android:id="@+id/fpTopTitleView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            tools:text="这是一个标题" />

        <ImageView
            android:id="@+id/fpTopBatteryView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            tools:src="@mipmap/ic_player_battery_100"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginEnd="6dp" />

        <TextView
            android:id="@+id/fpTopTimeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:textColor="@android:color/white"
            tools:text="12:00" />
    </LinearLayout>

    <!--底部控制容器-->
    <LinearLayout
        android:id="@+id/fpBottomContainer"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:background="@drawable/player_shape_controller_bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/fpBottomPlayView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="center"
            android:src="@drawable/player_selector_play_bottom" />

        <TextView
            android:id="@+id/fpBottomCurrentTimeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            tools:text="00:00" />

        <SeekBar
            android:id="@+id/fpBottomSeekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:max="100"
            android:maxHeight="2dp"
            android:progressDrawable="@drawable/player_layer_progress_horizontal"
            android:thumb="@drawable/player_shape_seekbar_thumb" />

        <TextView
            android:id="@+id/fpBottomTotalTimeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            tools:text="00:00" />

        <TextView
            android:id="@+id/fpBottomDefinitionView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="高清" />

        <ImageView
            android:id="@+id/fpBottomFullView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="center"
            android:src="@drawable/player_selector_full_screen" />
    </LinearLayout>

    <!--左侧锁图标-->
    <ImageView
        android:id="@+id/fpLockView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center|start"
        android:layout_margin="18dp"
        android:scaleType="center"
        android:background="@drawable/player_shape_play_lock_bg"
        android:padding="10dp"
        android:src="@drawable/player_selector_play_lock"
        android:visibility="gone" />

    <!--底部的进度条-->
    <ProgressBar
        android:id="@+id/fpBottomProgressView"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:max="100"
        android:progressDrawable="@drawable/player_layer_progress_horizontal"
        android:visibility="gone"
        tools:visibility="visible" />

    <!--开始播放-->
    <ImageView
        android:id="@+id/fpCenterPlayView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:scaleType="center"
        android:src="@drawable/player_selector_play_center"
        android:visibility="gone" />


</FrameLayout>