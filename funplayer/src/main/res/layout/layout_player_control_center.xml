<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="160dp"
    android:layout_height="120dp"
    android:background="@color/player_control_background"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/control_center_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            tools:src="@mipmap/ic_player_volume" />


        <TextView
            android:visibility="gone"
            android:id="@+id/control_center_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="+20ç§’"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>
    </FrameLayout>


    <TextView
        android:id="@+id/control_center_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        tools:text="100" />

    <ProgressBar
        android:id="@+id/control_center_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="100dp"
        android:layout_height="3dp"
        android:max="100"
        android:progressDrawable="@drawable/player_layer_progress_horizontal" />

</LinearLayout>